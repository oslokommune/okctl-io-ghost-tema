{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
            {{#if @member}}

            {{!-- Logged in: Redirect home --}}
            <script>window.location = '{{@site.url}}/';</script>
            {{else}}
                <div class="subscription-inner text-center">
                    <h1 class="subscription-title">{{t "Welcome back!"}}</h1>
                    <p class="subscription-description">
                        {{t "Sign into your account again for full access"}}
                    </p>
                    {{!-- Not logged in: Sign up--}}
                    <form class="subscribe-form" data-members-form="signin">
                        <div class="text-center">
                        </div>
                        <div class="form-field-wrap flex">
                            <label for="email" class="sr-only">{{t "Email"}}</label>
                            <input data-members-email type="email" class="email" id="email" placeholder="{{t "Your email address"}}" required/>
                            <button class="btn btn-primary btn-submit" type="submit">{{t "Send login link"}}</button>
                        </div>
                        <div class="text-center">
                            <div><small>{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a></small></div>
                            <div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}</div>
                            <div class="message-error"><strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}</div>
                        </div>
                    </form>
                </div>
            {{/if}}
            </div>
        </div>
    </div>
</div>