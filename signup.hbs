{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
            {{#if @member.paid}}

                {{!-- Logged in, paying member: Redirect home --}}
                <script>window.location = '{{@site.url}}/';</script>

            {{else if @member}}
                {{!-- Logged in, not paying: Check out --}}
                <div class="subscription-inner text-center">
                    <h1 class="subscription-title">{{t "Choose your subscription"}}</h1>
                    <p class="subscription-description">
                        {{t "Unlock full access to DigiDocs and see the entire library of members-only content & updates"}}
                    </p>
                    {{> members/pricing-table}}
                </div>
            {{else}}
                <div class="subscription-inner text-center">
                    <h1 class="subscription-title">{{t "Sign Up to"}} {{@site.title}}</h1>
                    <p class="subscription-description">
                        {{t "Get access to all premium content"}}
                    </p>
                    {{!-- Not logged in: Sign up--}}
                    <form class="subscribe-form" data-members-form="signup">
                        <div class="text-center">
                        </div>
                        <div class="form-field-wrap flex">
                            <label for="email" class="sr-only">{{t "Email"}}</label>
                            <input data-members-email type="email" class="email" id="email" placeholder="{{t "Your email address"}}" required/>
                            <button class="btn btn-primary btn-submit" type="submit">{{t "Sign up"}}</button>
                        </div>
                        <div class="text-center">
                            <div><small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small></div>
                            <div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription"}}</div>
                            <div class="message-error"><strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}</div>
                        </div>
                    </form>
                </div>
            {{/if}}
            </div>
        </div>
    </div>
</div>