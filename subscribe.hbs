{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="subscription-inner text-center">
                    {{#if @member}}
                    {{!-- Logged in: Redirect home --}}
                    <script>window.location = '{{@site.url}}/account/';</script>
                    {{else}}
                    <h1 class="subscription-title">{{t "Subscribe"}}</h1>
                    <p class="subscription-description">
                        {{t "Stay up to date! Get update notification straight to your inbox."}}
                    </p>
                    {{!-- Not logged in: Sign up--}}
                    <form class="subscribe-form" data-members-form="subscribe">
                        <div class="text-center">
                        </div>
                        <div class="form-field-wrap flex">
                            <label for="email" class="sr-only">{{t "Email"}}</label>
                            <input data-members-email type="email" class="email" id="email" placeholder="{{t "Your email address"}}" required/>
                            <button class="btn btn-primary btn-submit" type="submit">{{t "Subscribe"}}</button>
                        </div>
                        <div class="text-center">
                            <div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription"}}</div>
                            <div class="message-error"><strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}</div>
                        </div>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>